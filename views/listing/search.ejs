<% layout("layouts/boilerplate") -%>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(place of places){ %>
        <a class="box" href="/listings/<%= place._id %>">
            <div class="card col listingCard">
                <img src="<%= place.image.url %>" class="card-img-top" alt="...">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <div class="card-text">
                        <p class="card-text"><b><%= place.title %></b></p>
                        <p class="card-text">&#8377; <%= place.price.toLocaleString("en-IN")%>/night &nbsp; &nbsp; <i class="tax-info" style="display: none;">+ 18% GST</i></b></p>
                    </div>
                </div>
            </div>
        </a>
    <% } %>
    </div>
</body>
